{% extends 'layout.html.twig' %}

{% block title %}GRECO - Historial{% endblock %}

{% block content %}
    <div class="barraArriba">
        <h2 class="titulo">Listado de los historiales</h2>

        <a href="{{ path('historial_nuevo') }}" class="btn btn-info">
            <i class="fa-solid fa-user-plus"></i>
            Nuevo historial
        </a>
    </div>


    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fecha Préstamo</th>
                <th>Fecha Devolución </th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            {% for historial in pagination %}
                <tr>
                    <td>{{ historial.id }}</td>
                    <td>{{ historial.fechaHoraPrestramo|date('Y/m/d') }}</td>
                    <td>{{ historial.fechaHoraDevolucion|date('Y/m/d') }}</td>
                    <td>{{ historial.notas is null ? '---' : historial.notas }}</td>
                    <td>
                        <a href="{{ path('historial_modificar', {'id': historial.id}) }}" class="btn btn-secondary">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        <a href="{{ path('historial_eliminar', {'id': historial.id}) }}" class="btn btn-danger">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">NO hay datos</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(pagination) }}
{% endblock %}