{% extends 'layout.html.twig' %}

{% block title %}GRECO - Material{% endblock %}

{% block content %}
    <h2 class="titulo">Listado del material</h2>

    <table class="table table-bordered table-hover align-middle">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Fecha Ultimo Prestamo</th>
            <th>Fecha Ultima Devolucion</th>
            <th>¿Disponible?</th>
            <th>Fecha Alta</th>
            <th>Fecha Baja</th>
            <th>Localización</th>
            <th>¿Es padre?</th>
        </tr>
        </thead>
        <tbody>
        {% for material in materiales %}
            <tr>
                <td>{{ material.nombre }}</td>
                <td>{{ material.descripcion is null ? '---' : material.descripcion }}</td>
                <td>{{ material.fechaHoraUltimoPrestamo ? material.fechaHoraUltimoPrestamo|date('Y/m/d') : '---' }}</td>
                <td>{{ material.fechaHoraUltimaDevolucion ? material.fechaHoraUltimaDevolucion|date('Y/m/d') : '---' }}</td>
                <td>{{ material.disponible ? 'Sí' : 'No' }}</td>
                <td>{{ material.fechaAlta ? material.fechaAlta|date('Y/m/d') : '---' }}</td>
                <td>{{ material.fechaBaja ? material.fechaBaja|date('Y/m/d') : '---' }}</td>
                <td>{{ material.localizacion.nombre }}</td>
                <td>{{ material.materialPadre ? 'Sí' : 'No' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">NO hay datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}